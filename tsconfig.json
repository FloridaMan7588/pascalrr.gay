{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./app/*"
      ],
      "@lib/*": [
        "./app/lib/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@images/*": [
        "./public/images/*"
      ],
      "@content/*": [
        "./content/*"
      ]
    },
    "target": "es2022"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "next.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
